/* pages/ground/ground.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size:50rpx;
  background-color:  #cadbf9;
  margin-top: 5rpx;
  align-items: center;
}
.navbar .item{
  width: 33.33%;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: white;
}
.navbar .active{
  color: #de979b;
}
.title{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
  justify-content:space-between;
  background-color: #f1f0fe;
}
.poster{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.title image{
  margin-left: 20rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.name{
  font-size: 50rpx;
  color: #779dce;
}
.time{
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #779dce;
}
.content{
  padding-top: 10rpx;
  padding-left: 40rpx;
  color: #779dce;
  font-size: 50rpx;
  background-color: #f1f0fe;
  width: 100%;
  align-items: center;
}
.content image{
  width: 640rpx;
  height: 350rpx;
}
.content_1{
  display: flex;
  padding-top: 50rpx;
  background-color: #f1f0fe;
  width: 100%;
  height: 200rpx;
}
.content_txt{
  text-align: left;
  margin-left: 70rpx;
}
.operation{
  display: flex;
  flex-direction: row-reverse;
  background-color: #f1f0fe;
}
.operation image{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}

.operationContent{
  display:flex;
  background: #f1f0fe;
  font-size: 30rpx;
  color:#779dce;
}

.attachedImg{
  display: flex;
  width:600rpx;

}