        <text class="name">{{item.u_name}}</text>
      </view>
      <view>
        <text class="time">{{item.time}}</text>
      </view>
    </view>
    <view class="content_1">
      <text class="content_txt">{{item.content}}</text>
    </view>
    <view class="operation">
      <image src="../../icons/message.png"></image>
      <image src="../../icons/send.png"></image>
      <image src="../../icons/like.png"></image>
    </view>
  </view>
</scroll-view>