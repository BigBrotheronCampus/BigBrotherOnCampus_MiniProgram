<!--pages/ground/searchResult/searchResult.wxml-->
<searchBar id="searchBar"></searchBar>


<!--相关用户-->
<view class="imgRightBar" id="morePeople" bindtap="getMoreResult">
  <text>相关用户</text>
  <view style="display:flex;">
    <text>更多</text>
    <image class="icon" src="../../../icons/searchNext.png"></image>
  </view>
</view>

<view class="scrollBar" wx:if="{{people.length==0}}">没有检索到相关用户</view>

<view wx:for="{{people}}" wx:key="id" class="scrollBar" bindtap="seeDetails" data-item="{{item}}" wx:if="{{index<3}}" id='people' style="padding-left:0rpx;">
  <view style="display:flex;align-items:center;">
    <image class="icon" src="{{item.photo}}"></image>
    <text>{{item.name}}</text>
  </view>
</view>


<!--活动发布-->
<view class="imgRightBar" id="moreActivity" bindtap="getMoreResult">
  <text>活动发布</text>
  <view style="display:flex;">
    <text>更多</text>
    <image class="icon" src="../../../icons/searchNext.png"></image>
  </view>
</view>

<view class="scrollBar" wx:if="{{activities.length==0}}">没有检索到相关活动发布</view>

<view wx:for="{{activities}}" wx:key="index" bindtap="seeDetails" data-item="{{item}}" wx:if="{{index<3}}" id='activities'>
  <view class="header">
    <view class="poster">
      <image class="icon" src="{{item.photo}}"></image>
      <text class="name">{{item.name}}</text>
    </view>
    <view>
      <text class="time">{{item.time}}</text>
    </view>
  </view>
  <view class="content">
    <view style="display:flex;">
      <text>活动名称：</text>
      <text>{{item.name}}</text>
    </view>
    <view style="display:flex;">
      <text>活动内容：</text>
      <text>{{item.content}}</text>
    </view>
  </view>
</view>


<!--队友招募-->
<view class="imgRightBar" id="moreRecruit" bindtap="getMoreResult">
  <text>队友招募</text>
  <view style="display:flex;">
    <text>更多</text>
    <image class="icon" src="../../../icons/searchNext.png"></image>
  </view>
</view>

<view class="scrollBar" wx:if="{{recruits.length==0}}">没有检索到相关队友招募</view>

<!--添加点击查看详情事件、长按收藏事件-->
<view wx:for="{{recruits}}" wx:key="index" bindtap="seeDetails" data-item="{{item}}" wx:if="{{index<3}}" id='recruits'>
  <view class="header">
    <view class="poster">
      <image class="icon" src="{{item.photo}}"></image>
      <text class="name">{{item.name}}</text>
    </view>
    <view>
      <text class="time">{{item.time}}</text>
    </view>
  </view>
  <view class="content">
    <view style="display:flex;">
      <text>招募条件：</text>
      <text>{{item.content}}</text>
    </view>
  </view>
</view>


<!--精彩瞬间-->
<view class="imgRightBar" id="moreMoment" bindtap="getMoreResult">
  <text>精彩瞬间</text>
  <view style="display:flex;">
    <text>更多</text>
    <image class="icon" src="../../../icons/searchNext.png"></image>
  </view>
</view>

<view class="scrollBar" wx:if="{{moments.length==0}}">没有检索到相关精彩瞬间</view>

<!--添加点击查看详情事件、长按收藏事件-->
<view wx:for="{{moments}}" wx:key="index" bindtap="seeDetails" data-item="{{item}}" wx:if="{{index<3}}" id='moments'>
  <view class="header">
    <view class="poster">
      <image class="icon" src="{{item.photo}}"></image>
      <text class="name">{{item.name}}</text>
    </view>
    <view>
      <text class="time">{{item.time}}</text>
    </view>
  </view>
  <view class="content">
    <text>{{item.content}}</text>
    <image src="{{item.img}}" class="attachedFile" wx:if='{{item.img!="" && item.img != null}}'></image>
      <video src="{{item.video}}" class="attachedFile" wx:if='{{item.video!="" && item.video != null}}'></video>
  </view>
</view>