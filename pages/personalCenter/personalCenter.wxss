/* pages/personalCenter/personalCenter.wxss */
.avatar{
  background-color: #cadbf9;
  width:100%;
  height: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#userAvatar{
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  overflow:hidden;
}

.userID{
  vertical-align: center;
  font-size: 50rpx;
  color:#ffffff;
}

.social{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  height: 70rpx;
}

.social-txt{
  font-size: 50rpx;
  color:#de979b;
  flex-grow: 1;
  display: flex;
  justify-content: center;
}