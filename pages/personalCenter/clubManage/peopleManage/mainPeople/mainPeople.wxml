<!--pages/personalCenter/clubManage/peopleManage/mainPeople/mainPeople.wxml-->
<view id="divLine1"></view>

<view class="title">主要成员</view>

  <view class="inputBar">
    <text class="txt">指导老师：</text>
    <view style="width:20rpx;"></view>
    <view class="inTxt" style="background: #f1f0fe;" >{{teacher}}</view>
  </view>

  <view class="inputBar">
    <text class="txt" style="width:150rpx;">社长：</text>
    <view style="width:20rpx;"></view>
    <view class="inTxt" style="background: #f1f0fe;width:520rpx;">{{president}}</view>
  </view>

  <view class="inputBar">
    <text class="txt" style="width:200rpx;">副社长：</text>
    <view style="width:20rpx;"></view>
    <view class="inTxt" style="background: #f1f0fe;width:470rpx;">{{vicePresident}}</view>
  </view>

  <view class="inputBar">
    <text class="inTxt" style="width:150rpx;">社员：</text>
  </view>

  <view class="inTextarea" style="display:flex;">
    <view wx:for="{{members}}" wx:key="index">{{item + "、"}}</view>
  </view>

  <view style="display:flex;">
    <button class="inTxt" bindtap="edit" style="width:200rpx;height:fit-content;">编辑</button>
  </view>
