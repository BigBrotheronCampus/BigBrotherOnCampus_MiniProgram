/* pages/ground/details/details.wxss */
.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
  justify-content:space-between;
  background-color: #f1f0fe;
}
.poster{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
}
.header image{
  margin-left: 20rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}
.name{
  font-size: 40rpx;
  color: #779dce;
}
.time{
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #779dce;
}

.content{
  padding-top: 10rpx;
  padding-left: 40rpx;
  color: #779dce;
  font-size: 40rpx;
  background-color: #f1f0fe;
  width: 100%;
  align-items: center;
  text-overflow:ellipsis;
  word-wrap:break-word;
}

.content-header{
  width:200rpx;
}

.content-text{
  width:500rpx;
}

.content_1{
  display: flex;
  padding-top: 50rpx;
  background-color: #f1f0fe;
  width: 100%;
  height: 200rpx;
}
.content_txt{
  text-align: left;
  margin-left: 70rpx;
}
.operation{
  display: flex;
  flex-direction: row-reverse;
  background-color: #f1f0fe;
}
.operation image{
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
}

.operationContent{
  display: flex;
  flex-wrap: wrap;
  background: #f1f0fe;
  font-size: 30rpx;
  color:#779dce;
}

.attachedFile{
  margin-left:20rpx;
  margin-right: 20rpx;
  height: 690rpx;
}

.inContent{
  width:1000rpx;
  height:100rpx;
  font-size:40rpx;
  color: #779dce;
  background: #f1f0fe;
}

.sendBtn{
  width:100rpx;
  height:70rpx;
  font-size:30rpx;
  font-weight: bolder;
  background:#de979b;
  color:#ffffff;
  line-height:50rpx;
}