/* pages/findmates/findmates.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.divLine1{
  background:#cadbf9;
  width:100%;
  height: 35rpx;
}

.divLine2{
  background:#ffffff;
  width:100%;
  height: 35rpx;
}

.title{
  width: 100%;
  height: 80rpx;
  background: #cadbf9;
  display: flex;
  flex-direction: row;
  font-size: 50rpx;
  color: #ffffff;
}

.title image{
  width: 80rpx;
  height: 80rpx;
}

.title text{
  margin-left: 210rpx;
}

.content{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  flex-direction: column;
}

.name{
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  justify-content: space-between;
  width: 90%;
}
.name text{
  color: #8eb5f8;
  padding-left: 10rpx;
  padding-right: 20rpx;
  background-color: #f1f0fe;
}
.name input{
  width: 80%;
  background-color: #f1f0fe;
}

.precondition{
  display: block;
  width: 90%;
}
.precondition text{
  color: #8eb5f8;
  padding-left: 10rpx;
  padding-right: 20rpx;
  background-color: #f1f0fe;
}
.precondition textarea{
  margin-top: 20rpx;
  width: 100%;
  background-color: #f1f0fe;
}

.contactInf{
  width: 90%;
  display: block;
  margin-top: 30rpx;
}
.contactInf text{
  color: #8eb5f8;
  padding-left: 10rpx;
  padding-right: 20rpx;
  background-color: #f1f0fe;
}
.contactInf textarea{
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  background-color: #f1f0fe;
}

.submit{
  font-size: 50rpx;
  margin-top: 70rpx;
  padding: 15rpx;
  color: #8eb5f8;
  background-color: #f1f0fe;
}