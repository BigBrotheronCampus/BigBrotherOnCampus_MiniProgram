/* pages/credit/credit.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.divLine1{
  background:#cadbf9;
  width:100%;
  height: 35rpx;
}

.divLine2{
  background:#ffffff;
  width:100%;
  height: 35rpx;
}

.title{
  width: 100%;
  height: 80rpx;
  background: #cadbf9;
  display: flex;
  flex-direction: row;
  font-size: 50rpx;
  color: #ffffff;
}

.title image{
  width: 80rpx;
  height: 80rpx;
}

.title text{
  margin-left: 210rpx;
}

.content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head{
  font-size: 50rpx;
  color:  #de979b;
  padding: 30rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  background-color: #f1f0fe;
}

.score{
  width: 80%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f1f0fe;
  margin-bottom: 40rpx;
}
.score text{
  margin-left: 20rpx;
  font-size: 50rpx;
  padding: 25rpx;
  color: #de979b;
}

.time{
  width: 80%;
  background-color: #f1f0fe;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  text-align: center;
  font-size: 50rpx;
  margin-bottom: 80rpx;
  color: #de979b;
}

.count{
  width: 80%;
  background-color: #f1f0fe;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  text-align: center;
  font-size: 50rpx;
  margin-bottom: 80rpx;
  color: #8eb5f8;
}

.credit{
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.credit text{
  background-color: #f1f0fe;
  font-size: 50rpx;
  color: #8eb5f8;
  padding: 10rpx;
}