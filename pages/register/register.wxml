<!--logs.wxml-->
<view class="login">
  <view class="title">
    <image src="../../icons/eye.png"></image>
    <text>校园大哥大</text>
  </view>
  <view class="register">注册</view>
  <view class="out_enter">
    <view class="enter">
      <view class="phone">手机号</view>
      <view class="in_phone">
        <image src="../../icons/phone.png"></image>
        <input bindinput="inputPhone"></input>
      </view>
      <view class="phone">密码</view>
      <view class="in_phone">
        <image src="../../icons/password.png"></image>
        <input bindinput="inputPassword"></input>
      </view>
      <view class="phone">学号</view>
      <view class="in_phone">
        <image src="../../icons/person.png"></image>
        <input bindinput="inputAccount"></input>
      </view>
      <view class="phone">昵称</view>
      <view class="in_phone">
        <image src="../../icons/person.png"></image>
        <input bindinput="inputName"></input>
      </view>
       <view class="phone">真实姓名</view>
      <view class="in_phone">
        <image src="../../icons/person.png"></image>
        <input bindinput="inputTrueName"></input>
      </view>
      <view class="ver_code">验证码</view>
      <view class="in_code" style="padding-left:20rpx;">
        <image src="../../icons/safety.png"></image>
        <input bindinput="inputCode" class="input_code"></input>
        <button bindtap="getCode" style="background:#cadbf9;">
          <text style="font-size:30rpx;">获取验证码</text>
        </button>
      </view>
    </view>
  </view>
  <view class="enter_down"></view>
  <view class="other">
    <image src="../../icons/enter.png" class="log_enter" bindtap="check"></image>
    <view bindtap="showPolicy">
      <text>服务协议和隐私政策
      (点击注册视为同意此协议)</text>
    </view>
  </view>
</view>
