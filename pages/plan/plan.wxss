/* pages/plan/plan.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
searchInput{
  margin-top: 3rpx;
  margin-bottom: 3rpx;
}
.head{
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  background-color: #f1f0fe;
}
.head view{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  margin-top: 30rpx;
  width: 25%;
  height: 200rpx;
}
.head view image{
  width: 100rpx;
  height: 90rpx;
} 
.head view text{
  color: #04095a;
}
.body{
  width: 100%;
  height: 100%;
  display: flex;
  background-color: #f1f0fe;
  flex-wrap: wrap;
}
.body view{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  margin-top: 40rpx;
}
.body view image{
  width: 200rpx;
  height: 200rpx;
  padding: 40rpx;
  background-color: white;
}